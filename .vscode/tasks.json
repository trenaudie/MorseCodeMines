{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build morse program",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++20",
        "-g",
        "-o",
        "morse_program",
        "scratch2.cpp",
        "src/ggmorse.cpp",
        "src/resampler.cpp",
        "-I./include"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build current file with c++20",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++20",
        "-g",
        "-o",
        "${fileBasenameNoExtension}",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build current file with c++20 and FFT",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "-I.",
        "-o",
        "${fileBasenameNoExtension}",
        "${file}",
        "${workspaceFolder}/fft_copied/kiss_fft.c",
        "${workspaceFolder}/fft_copied/kiss_fftr.c",

      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "cmake configure",
      "type": "shell",
      "command": "cmake",
      "args": ["-S", "${workspaceFolder}", "-B", "${workspaceFolder}/build"],
      "problemMatcher": []
    },
    {
      "label": "cmake build current file",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build",
        "--target",
        "${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "dependsOn": ["cmake configure"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "cmake build all",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build"],
      "dependsOn": ["cmake configure"],
      "problemMatcher": ["$gcc"]
    }
  ]
}
